# Binance API（必須）
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET=your_secret_here

# Telegram Bot（必須）
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ALLOWED_USERS=your_telegram_user_id
TELEGRAM_ADMIN_USERS=your_telegram_user_id

# Bot 設定（可選）
BOT_TIMEZONE=Asia/Taipei
BOT_NOTIFY_LEVEL=IMPORTANT
BOT_SESSION_TIMEOUT=1800
BOT_RATE_LIMIT=10

# Webhook 設定（生產環境）
USE_WEBHOOK=false
WEBHOOK_URL=https://yourdomain.com/telegram_webhook
BOT_PORT=8000

# Telegram 通知（已整合到 Bot）
TELEGRAM_CHAT_ID=your_chat_id_here
